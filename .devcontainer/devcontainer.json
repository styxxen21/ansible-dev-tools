{
  "name": "ansible-dev-container-codespaces",
  "image": "ghcr.io/ansible/community-ansible-dev-tools:latest",
  "containerUser": "root",
  "runArgs": [
    "--privileged",
    "--device",
    "/dev/fuse",
    "--hostname=ansible-dev-container"
  ],
  "mounts": [
    // Use ${localEnv:HOME} to expand the host home directory, or replace with /Users/yourusername
    "source=${localEnv:HOME}/Documents/GitHub,target=/home/runner/github,type=bind,consistency=cached"
  ],
  "postCreateCommand": "bash /workspaces/ansible-dev-tools/.devcontainer/setup-foam.sh",
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "GitHub.copilot",
        "IkBenGeenRobot.ansible-variable-lookup",
        "mikoz.black-py",
        "ms-python.black-formatter",
        "formulahendry.code-runner",
        "freakypie.code-python-isort",
        "waderyan.gitblame",
        "donjayamanne.githistory",
        "apsislabs.mergetool-navigator",
        "shyykoserhiy.git-autoconfig",
        "github.vscode-github-actions",
        "GitHub.codespaces",
        "erichbehrens.pull-request-monitor",
        "GitHub.remotehub",
        "eamodio.gitlens",
        "ms-python.isort",
        "valentjn.vscode-ltex",
        "DavidAnson.vscode-markdownlint",
        "mechatroner.rainbow-csv",
        "unjinjang.rest-api-client",
        "trond-snekvik.simple-rst",
        "tht13.rst-vscode",
        "tomblind.scm-buttons-vscode",
        "oderwat.indent-rainbow",
        "VisualStudioExptTeam.intellicode-api-usage-examples",
        "ms-python.mypy-type-checker",
        "esbenp.prettier-vscode",
        "ms-python.pylint",
        "esbenp.prettier-vscode",
        "markis.code-coverage",
        "ms-python.debugpy",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "ms-python.python",
        "streetsidesoftware.code-spell-checker",
        "chouzz.vscode-better-align",
        "dzhavat.bracket-pair-toggler",
        "bierner.github-markdown-preview",
        "hashicorp.terraform",
        "bierner.markdown-checkbox",
        "bierner.markdown-emoji",
        "bierner.markdown-footnotes",
        "bierner.markdown-mermaid",
        "bierner.markdown-preview-github-styles",
        "migueltarga.ssh-control",
        "charliermarsh.ruff",
        "jakob101.relativepath",
        "ue.alphabetical-sorter",
        "gruntfuggly.triggertaskonsave",
        "timonwong.shellcheck",
        "foam-vscode.foam-vscode",
        "yzhang.markdown-all-in-one",
        "kortina.vscode-markdown-notes",
        "tchayen.markdown-links",
        "shd101wyy.markdown-preview-enhanced"
      ]
    }
  }
}
